<!-- include header -->
<%- include('include/_header.ejs') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <% if(role=="Admin" ) {%>

                <div class="box-nav d-flex justify-between">
                    <a href="/add-user" class="border-shadow">
                        <span class="text-gradient">New User <i class="fa-solid fa-user"></i></span>
                    </a>
                </div>

                <% }%>
                    <!-- form handling -->
                    <form action="/" method="POST">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Amount</th>
                                    <th>Buy</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(var i=0; i< product.length;i++) {%>
                                    <tr>
                                        <td>
                                            <%= i %>
                                        </td>
                                        <td>
                                            <%= product[i].productName %>
                                        </td>
                                        <td>
                                            <%= product[i].amount %>
                                        </td>
                                        <td>
                                            <a class="btn-border-shadow update"
                                                href="/product?id=<%= product[i]._id %>">
                                                <span class="material-symbols-outlined">
                                                    shopping_cart_checkout
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                    <%}%>
                            </tbody>
                        </table>
                    </form>
                    <!-- /form handling -->
        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer.ejs') %>
        <!-- /include footer -->